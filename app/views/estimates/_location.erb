<div class="box-body">
  <form role="form">
    <div class="form-group">
      <label>Select</label>
      <%= select_tag :region_id, options_for_select(@region_list), :prompt => "All Region", class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>Select</label>
      <%= select_tag :solar_system_id, options_for_select(@solar_system_list), :prompt => "All Solar System", class: 'form-control' %>
    </div>
    <div class="form-group">
      <label>System Cost Index</label> :
      1.05 %
      <div class="progress sm progress-striped active">
        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
          <span class="sr-only">20% Complete</span>
        </div>
      </div>
    </div>
    <div class="box-body no-padding">
      <table class="table table-condensed">
        <tr>
          <th>Base Job Cost</th>
          <th>Job Fee</th>
          <th>Facility Cost</th>
          <th>Job Install Cost</th>
        </tr>
        <tr>
          <td>
            10,000 isk
          </td>
          <td>
            10,000 isk
          </td>
          <td>
            10,000 isk
          </td>
          <td>
            10,000 isk
          </td>
        </tr>
      </table>
    </div>
  </form>
</div>

